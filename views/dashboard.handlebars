    <div class="mb-5 pt-3">
        <a href="/dashboard/new"><button id="create-post" class="button">create post</button></a>
        
        <h2 class="title">dashboard: your posts</h2><hr>
{{#if posts.length}}
    </div>

    {{#each posts as |post|}}
        {{> post-info post}}
        
            <a href="/dashboard/edit/{{post.id}}"><button class="button">edit post</button></a>
        </div>
    {{/each}}

{{else}}
<h2>you do not currently have any posts</h2>

{{/if}}